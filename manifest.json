{

  "manifest_version": 2,
  "name": "Robinson",
  "version": "0.1",
  "author": "ohataken",

  "description": "Generates various format links",
  "homepage_url": "https://github.com/ohataken/robinson",

  "permissions": [
    "tabs",
    "contextMenus"
  ],

  "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": [
        "crossbrowser.js",
        "content_script.js"
      ]
  }],

  "background": {
    "scripts": [
      "crossbrowser.js",
      "background.js"
    ],
    "persistent": false
  }

}
